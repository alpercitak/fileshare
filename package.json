{
	"name": "fileshare",
	"version": "1.0.0",
	"main": "index.js",
	"repository": "https://github.com/alpercitak/fileshare.git",
	"author": "Alper Çıtak <citak.alper@gmail.com>",
	"license": "MIT",
	"scripts": {
		"dev": "pnpm --stream -r dev",
		"husky:configure": "npx husky install && npx husky add .husky/pre-commit \"npx --no-install lint-staged\"",
		"prettier:write": "npx prettier --write .",
		"eslint:fix": "npx eslint --fix"
	},
	"devDependencies": {
		"eslint": "^8.16.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-config-standard": "^17.0.0",
		"eslint-plugin-import": "^2.25.2",
		"eslint-plugin-json": "^3.1.0",
		"eslint-plugin-n": "^15.0.0",
		"eslint-plugin-promise": "^6.0.0",
		"lint-staged": "^12.4.3",
		"prettier": "^2.6.2"
	},
	"eslintConfig": {
		"env": {
			"browser": true,
			"node": true,
			"es6": true,
			"commonjs": true
		},
		"extends": [
			"eslint:recommended",
			"plugin:json/recommended",
			"prettier"
		],
		"parserOptions": {
			"ecmaVersion": 2018,
			"sourceType": "module"
		},
		"rules": {
			"indent": [
				"warn",
				"tab"
			],
			"quotes": [
				"error",
				"double"
			],
			"semi": [
				"error",
				"always"
			]
		},
		"ignorePatterns": [
			"node_modules",
			"**/node_modules",
			"**/public"
		]
	},
	"lint-staged": {
		"**/*.{js,jsx,json}": [
			"prettier --write .",
			"eslint --fix"
		]
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	}
}
