{
	"env": {
		"browser": true,
		"node": true,
		"es6": true,
		"commonjs": true
	},
	"extends": ["eslint:recommended", "plugin:json/recommended", "prettier"],
	"parserOptions": {
		"ecmaVersion": 2018,
		"sourceType": "module"
	},
	"rules": {
		"indent": ["warn", "tab"],
		"quotes": ["error", "double"],
		"semi": ["error", "always"]
	},
	"ignorePatterns": ["node_modules", "**/node_modules", "**/public"]
}
